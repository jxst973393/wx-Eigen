.bar{position:fixed;top: 0;left: 0;  border-bottom: 1rpx solid #E7E7E7;width: 100%;height:90rpx; text-align: center;line-height: 90rpx;background: white}
.top{height: 96rpx; background: #F0F0F0}
.box{
  display: flex;
  padding: 20rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #E7E7E7;
}
.box .warp{display: flex}
.box .right{margin-right: 40rpx;}
.box .right  .tofollow{ color:#4192EF}
.box .right  .followed{ color: rgb(83, 76, 76);}
.box image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  overflow: hidden;
}
.box .info{
  display: flex;
  margin-left: 30rpx;
  align-items: center;
}
.box .info text{
  margin: 10rpx 0;
}
.noData{
  color: rgb(104, 97, 97);
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
